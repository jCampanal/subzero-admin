{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": [
    "react-app",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier",
    "unused-imports"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  },
  "rules": {
    // Prettier configs based on airbnb guide
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "always",
        "bracketSpacing": "off",
        "jsxBracketSameLine": false,
        "jsxSingleQuote": false,
        "printWidth": 160,
        "proseWrap": "always",
        "quoteProps": "as-needed",
        "semi": true,
        "singleQuote": true,
        "tabWidth": "off",
        "trailingComma": "es5",
        "useTabs": false,
        "endOfLine": "auto"
      }
    ],
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "import/no-extraneous-dependencies": ["warn", {"devDependencies": true}],
    "no-unused-vars": "error",
    "no-console": "warn",
    "no-use-before-define": "error",
    "no-underscore-dangle": "warn",
    "no-param-reassign": "off", // mutating redux state in redux-toolkit.
    "import/no-unresolved": "warn", // raw-loader
    "global-require": "off", // raw-loader
    "react/no-array-index-key": "on",
    "react/no-unescaped-entities": "off",
    "react/destructuring-assignment": "off",
    "react/jsx-props-no-spreading": "off",
    "react/state-in-constructor": "off",
    "react/no-danger": "off",
    "react/prop-types": "on",
    "react/forbid-prop-types": "off",
    "react/require-default-props": "off",
    "react/default-props-match-prop-types": "off",
    "react/no-unused-prop-types": "on",
    "react/react-in-jsx-scope": "warn", // after react v17
    "react/jsx-uses-react": "warn", // after react v17
    "react/jsx-no-bind": "off",
    "unused-imports/no-unused-imports": "warn"
  }
}
